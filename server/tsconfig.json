{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es2017"],
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "typeRoots": [
      "./src/@types",
      "./custom_typings",
      "./@types",
      "./node_modules/@types"
    ]
  }
}
